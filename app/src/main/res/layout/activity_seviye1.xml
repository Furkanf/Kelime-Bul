<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEB3B"
    tools:context=".seviye1">

    <Button
        android:id="@+id/harf1"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginBottom="148dp"
        android:layout_marginStart="96dp"
        android:background="#FFEB3B"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

    <Button
        android:id="@+id/harf2"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginBottom="148dp"
        android:layout_marginEnd="96dp"
        android:background="#FFEB3B"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/harf3"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="180dp"
        android:layout_marginStart="181dp"
        android:background="#FFEB3B"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/metin"
        android:layout_width="172dp"
        android:layout_height="53dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="96dp"
        android:gravity="center"
        android:textColor="#FF5722"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/harf1"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/mix"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="215dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/mixed"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="215dp"
        android:layout_marginStart="19dp"
        android:background="@drawable/delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/metin" />

    <LinearLayout
        android:id="@+id/myLinearLayout"
        android:layout_width="335dp"
        android:layout_height="280dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></LinearLayout>

    <Button
        android:id="@+id/kelimeGonder"
        android:layout_width="157dp"
        android:layout_height="41dp"
        android:layout_marginBottom="100dp"
        android:alpha="0"
        app:layout_constraintBottom_toTopOf="@+id/harf3"
        app:layout_constraintEnd_toStartOf="@+id/deleteButton"
        app:layout_constraintHorizontal_bias="0.63"
        app:layout_constraintStart_toEndOf="@+id/mix" />

</androidx.constraintlayout.widget.ConstraintLayout>